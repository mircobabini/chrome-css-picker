{
  "name": "CSS Picker",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Pick css style of any element with ease",
  "homepage_url": "http://mircobabini.com/project/css-picker",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "browser_action.html"
  },
  "permissions": ["tabs", "<all_urls>"],
  "web_accessible_resources": ["test/css/style8.css"]
}
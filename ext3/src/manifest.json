{
	"manifest_version": 2,
	"name": "CSS Picker",
	"version": "1.3.27",
	"description": "Pick css style of any element with ease.",
	"homepage_url": "http://mircobabini.com/project/css-picker",
	"minimum_chrome_version":"19",
	"icons": {
		"16":"img/icon_16.png",
		"48":"img/icon_48.png",
		"128":"img/icon_128.png"
	},
	"background": {
		"page": "backgroundpage.html"
	},
	"browser_action": {
		"default_icon":		"img/icon_19.png",
		"default_title":	"Clear Cache"
	},
	"options_page": "options.html",
	"permissions": ["browsingData", "tabs", "cookies", "<all_urls>"]
}

